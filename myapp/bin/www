#!/usr/bin/env node

/**
 * Module dependencies.
 */
let webRunner = require('./runners/web.js');
let dbRunner = require('./runners/db.js');

Promise.resolve()
    .then(webRunner)
    .then(dbRunner)
    .then(() => {
        console.info('Application is running successfully');
    })
    .catch(err => {
      if (err) {
          console.error(err);
      }
        console.error('Application run is failed');
      process.exit(1);
    });

